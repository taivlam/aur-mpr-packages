pkgname=bitwarden-bin
pkgver=2024.3.0
pkgrel=1
pkgdesc='A secure and free password manager for all of your devices.'
arch=('amd64')
depends=('libnotify4' 'libxtst6' 'libnss3' 'libsecret-1-0' 'libxss1')
license=('GPL-3.0')
url="https://bitwarden.com"

source=("https://github.com/bitwarden/clients/releases/download/desktop-v${pkgver}/Bitwarden-${pkgver}-amd64.deb")
b2sums=('668fd4c18507b349e5892e7511b4898764a33d9da0a837379c7856caa054782fbf6a3337b03a779a8c8111d2458f560b31c32856850ff931694a8f18d889bdc9')

package() {
  msg2 "Extracting data.tar.xz..."
  tar -xf 'data.tar.xz' -C "${pkgdir}"
}

